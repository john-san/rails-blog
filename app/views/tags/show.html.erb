<h1> Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>

<% if logged_in? %>
  <p><%= link_to "Delete Tag", tag_path(@tag), method: :delete, data: {confirm: "Really delete the tag?"} %>
</p>
<% end %>

<%= link_to "See more tags", tags_path %> | <%= link_to "Back to Blog", articles_path %>
<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <%= render partial: 'layouts/flash' %>

    <div id="container">
      <div id="content">
        <div class="row">
          <div class="col-md-3">
            <%= render partial: 'layouts/sidebar_navigation' %>
          </div>
          <div class="col-md-9">
            <%= yield %>
          </div>
      </div>
      <%= render partial: 'layouts/footer' %>
    </div>
  </body>
</html>
